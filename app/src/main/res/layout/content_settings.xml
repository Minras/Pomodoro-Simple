<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.minras.android.pomodorosimple.SettingsActivity"
    tools:showIn="@layout/activity_settings"
    android:orientation="vertical">

    <TextView
        android:id="@+id/duration_work_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.H2"
        android:text="@string/header_settings_work_duration"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/duration_work"
        android:max="179"/>

    <TextView
        android:id="@+id/duration_shortbreak_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.H2"
        android:text="@string/header_settings_shortbreak_duration"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/duration_shortbreak"
        android:max="59"/>

    <TextView
        android:id="@+id/duration_longbreak_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.H2"
        android:text="@string/header_settings_longbreak_duration"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/duration_longbreak"
        android:max="59"/>

    <Button
        android:id="@+id/settings_btn_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_text_reset_defaults"
        />
</LinearLayout>